{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs",
        "entryPoint": "./src/index.ts",
        "excludeExternals": true,
        "excludeNotExported": true,
        "excludePrivate": true,
        "theme": "minimal",
        "readme": "README.md"
    },
    "exclude": ["node_modules", "**/*.test.ts"],
    "include": ["src/**/*"]
}
